<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>学生信息管理</title>
    <style>
        table {
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #333;
            font-size: 1rem;
            padding: 10px;
            text-align: center;
        }

        caption {
            font-size: 1.2rem;
            line-height: 2.4;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <!-- <h1>Hello EJS!</h1> -->
    <table>
        <caption>学生管理</caption>
        <thead>
            <tr>
                <th>学号</th>
                <th>姓名</th>
                <th>年龄</th>
                <th>性别</th>
                <th>住址</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <% for (const stu of stus) { %>
                <tr>
                    <td><%= stu.id %></td>
                    <td><%= stu.name %></td>
                    <td><%= stu.age %></td>
                    <td><%= stu.gender %></td>
                    <td><%= stu.address %></td>
                    <td>
                        <a href="/delete-student?id=<%= stu.id %>">删除</a>
                        <a href="/update-student?id=<%= stu.id %>">修改</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <br>
    <form action="/add-student" method="post">
        <div>
            姓名：<input type="text" name="name">
        </div>
        <div>
            性别：<input type="radio" name="gender" value="男" checked>男
            <input type="radio" name="gender" value="女">女
        </div>
        <div>
            年龄：<input type="number" min="0" max="200" name="age">
        </div>
        <div>
            住址：<input type="text" name="address">
        </div>
        <div>
            <button>添加</button>
        </div>
    </form>
</body>

</html>